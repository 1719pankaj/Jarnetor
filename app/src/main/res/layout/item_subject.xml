<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/round_corner"
    android:outlineProvider="bounds"
    android:elevation="18dp">

    <ImageView
        android:id="@+id/folderIv"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:src="@drawable/folder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/folderIv"
        app:layout_constraintStart_toEndOf="@+id/folderIv"
        app:layout_constraintTop_toTopOf="@+id/folderIv"
        tools:text="Placeholder Text" />

    <ImageView
        android:id="@+id/optionIv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/options"
        app:layout_constraintBottom_toBottomOf="@+id/subNameTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/subNameTv" />

</androidx.constraintlayout.widget.ConstraintLayout>